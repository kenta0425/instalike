<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.profile %>
      <% if current_user %>
        <%= link_to "Profile Settings", edit_user_path(current_user) %>
      <% else %>
      <% end %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if user_signed_in? %>
    <% if @user.posts.any? %>
      <p>Posts (<%= @user.posts.count %>)</p>
      <divl class="posts">
        <%= render @posts %>
      </divl>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>