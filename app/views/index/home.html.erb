<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

  <div class="center jumbotron">
    <h1>Welcome to the Instalike</h1>
    
    <h2>
      This is the Instagram clone application for sub subject.
    </h2>
    
    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>