<% if user_signed_in? %>
  <div class="row">
    <div class="feeds">
      <% @feeds.each do |post| %>
      <div class="card mb-4">
        <span class="user-name">
          <%= link_to post.user.name, post.user %>
        </span>
        <div class="card-image">
          <figure class="image">
            <%= link_to [post] do %>
              <%= image_tag post.image.variant(resize: '500x500') if post.image.attached? %>
            <% end %>
          </figure>
          <div id="like-btn-<%= post.id %>">
            <%= render 'likes/like', post: post %>
          </div>
          <div class="post-content">
            <%= post.content %>
          </div>
          <span class="timestamp">
            <%= time_ago_in_words(post.created_at) %> ago.
          </span>
      </div>
      <% end %>
    </div>
  </div>
<% else %>

  <div class="center jumbotron">
    <h1>Welcome to the Instalike</h1>
    
    <h2>
      This is the Instagram clone application for sub subject.
    </h2>
    
    <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>